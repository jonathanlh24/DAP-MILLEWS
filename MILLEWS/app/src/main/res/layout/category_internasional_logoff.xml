<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/millews"
                android:textColor="#FF0000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:text="@string/main_profile"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/iv_profile_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/profile" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="8dp"
            android:background="#FF0000">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/home"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_travel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/travel"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_international"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/international"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/sport"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_techonlogy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/technology"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_gayaHidup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/gayaHidup"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_internasional_content"
                    android:layout_width="wrap_content"
                    android:layout_height="228dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/nahkoda_italia" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_main_content_1"
                        android:layout_width="295dp"
                        android:layout_height="70dp"
                        android:background="#FFFFFF"
                        android:shadowColor="#707070"
                        android:shadowDx="0"
                        android:shadowDy="5"
                        android:shadowRadius="0"
                        android:text="@string/category_internasional_nahkodaItalia"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="5dp"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_main_category_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/international"
                            android:textColor="#FF0000"
                            android:textSize="18sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_main_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/main_time_content_nahkodaItalia"
                            android:textColor="#888888"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_beritaInternasionalLainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:text="@string/berita_internasional"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    tools:layout_marginBottom="20dp">

                    <LinearLayout
                        android:id="@+id/beritaInternasional_unesco"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_internasional_unesco"
                            android:layout_width="132dp"
                            android:layout_height="85dp"
                            app:srcCompat="@drawable/unesco" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/tv_internasional_unesco"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:text="@string/internasional_unesco"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_main_category_unesco"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_weight="1"
                                    android:text="@string/international"
                                    android:textColor="#FF0000"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/tv_main_time_unesco"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="20dp"
                                    android:text="@string/time_internasional_unesco"
                                    android:textColor="#888888"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/iv_internasional_covidBrazil"
                            android:layout_width="132dp"
                            android:layout_height="85dp"
                            tools:srcCompat="@drawable/covid_brazil" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/tv_internasional_covidBrazil"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:text="@string/internasional_covidBrazil"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_main_category_covidBrazil"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_weight="1"
                                    android:text="@string/international"
                                    android:textColor="#FF0000"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/tv_main_time_covidBrazil"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="20dp"
                                    android:text="@string/time_internasional_covidBrazil"
                                    android:textColor="#888888"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/beritaInternasional_AS_kritikpemiluIran"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_Internasional_AS_kritikpemiluIran"
                            android:layout_width="132dp"
                            android:layout_height="85dp"
                            app:srcCompat="@drawable/as_kritik_pemilu_iran" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/tv_internasional_AS_kritik_pemiluIran"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:text="@string/internasional_AS_kritik_pemiluIran"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_main_category_AS_kritik_pemiluIran"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_weight="1"
                                    android:text="@string/international"
                                    android:textColor="#FF0000"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/tv_main_time_as_kritik_pemiluIran"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="20dp"
                                    android:text="@string/time_internasional_AS_kritik_pemiluIran"
                                    android:textColor="#888888"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/beritaInternasional_pemungutansuaraIran"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_Internasional_pemungutansuara_Iran"
                            android:layout_width="132dp"
                            android:layout_height="85dp"
                            app:srcCompat="@drawable/pemungutansuara_iran" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/tv_internasional_pemungutsuaraIran"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:text="@string/internasional_pemungutansuaran_Iran"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_main_category_pemungutansuaraIran"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_weight="1"
                                    android:text="@string/international"
                                    android:textColor="#FF0000"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/tv_main_time_pemungutansuaraIran"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="20dp"
                                    android:text="@string/time_internasional_pemungutansuara_Iran"
                                    android:textColor="#888888"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>