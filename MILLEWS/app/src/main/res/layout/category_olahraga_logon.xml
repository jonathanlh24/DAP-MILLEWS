<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/millews"
                android:textColor="#FF0000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:text="@string/main_profile"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/iv_profile_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/profile" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="8dp"
            android:background="#FF0000">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/home"
                    android:textAlignment="gravity"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_travel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/travel"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_international"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/international"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/sport"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_techonlogy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/technology"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_gayaHidup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/gayaHidup"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />


            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="589dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_main_content_olahraga"
                    android:layout_width="match_parent"
                    android:layout_height="228dp"
                    android:padding="10dp"
                    app:layout_constraintBottom_toTopOf="@id/gap"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/italia_euro2020" />

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="313dp"
                    android:layout_height="126dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_main"
                    android:elevation="15dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@id/LL_BeritaUtama"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.859">

                    <LinearLayout
                        android:layout_width="296dp"
                        android:layout_height="5dp"
                        android:orientation="vertical">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_main_content_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:padding="10dp"
                        android:shadowColor="#707070"
                        android:shadowDx="0"
                        android:shadowDy="5"
                        android:shadowRadius="0"
                        android:text="@string/category_olahraga_italia_euro2020"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:background="#FFFFFF"
                        android:gravity="center|top|center_vertical"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <TextView
                            android:id="@+id/tv_main_category_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingStart="10dp"
                            android:text="@string/olahraga"
                            android:textColor="#FF0000"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_main_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:text="@string/main_time_content_italia_euro2020"
                            android:textColor="#494949"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gap"
                    android:layout_width="424dp"
                    android:layout_height="62dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/LL_BeritaUtama"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_main_content_olahraga"></LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_BeritaUtama"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_main_content_olahraga">

                    <LinearLayout
                        android:id="@+id/LL_BeritaLainnya"
                        android:layout_width="413dp"
                        android:layout_height="345dp"
                        android:orientation="vertical"
                        tools:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_beritaLainnya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/berita_olahraga"
                            android:textAllCaps="true"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="301dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            tools:layout_marginBottom="20dp">

                            <LinearLayout
                                android:id="@+id/beritaOlahraga_Belgia_harus_menang_vs_Finlandia"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_olahraga_begia_harus_menang"
                                    android:layout_width="132dp"
                                    android:layout_height="85dp"
                                    app:srcCompat="@drawable/belgia_wajib_menang_vs_finlandia" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:paddingLeft="10dp">

                                    <TextView
                                        android:id="@+id/tv_olahraga_belgia_harus_menang"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:layout_weight="1"
                                        android:text="@string/olahraga_belgia_harus_menang_vs_Finlandia"
                                        android:textColor="#000000"
                                        android:textSize="16sp" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_main_category_belgia_harus_menang"
                                            android:layout_width="wrap_content"
                                            android:layout_height="25dp"
                                            android:layout_weight="1"
                                            android:text="@string/olahraga"
                                            android:textColor="#FF0000"
                                            android:textSize="15sp"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/tv_main_time_begia_harus_menang"
                                            android:layout_width="wrap_content"
                                            android:layout_height="25dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="20dp"
                                            android:text="@string/time_olahraga_belgia_harus_menang_vs_Finlandia"
                                            android:textColor="#888888"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/beritaOlahraga_MaxVerstappen"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_olahraga_maxVerstappen"
                                    android:layout_width="132dp"
                                    android:layout_height="85dp"
                                    app:srcCompat="@drawable/max_verstappen_menang_dramatis" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:paddingLeft="10dp">

                                    <TextView
                                        android:id="@+id/tv_olahraga_maxVerstappern"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:layout_weight="1"
                                        android:text="@string/olahraga_max_verstappen_menang_dramatis"
                                        android:textColor="#000000"
                                        android:textSize="16sp" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_main_category_maxVerstappen"
                                            android:layout_width="wrap_content"
                                            android:layout_height="25dp"
                                            android:layout_weight="1"
                                            android:text="@string/olahraga"
                                            android:textColor="#FF0000"
                                            android:textSize="15sp"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/tv_main_time_maxVerstappen"
                                            android:layout_width="wrap_content"
                                            android:layout_height="25dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="20dp"
                                            android:text="@string/time_olahraga_max_verstappen_menang_dramatis"
                                            android:textColor="#888888"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/beritaTravel_Mentawai"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_olahraga_marquez_menangis_menang"
                                    android:layout_width="132dp"
                                    android:layout_height="85dp"
                                    app:srcCompat="@drawable/marquez_menangis_menang" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:paddingLeft="10dp">

                                    <TextView
                                        android:id="@+id/tv_olahragan_marquez_menangis_menang"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:layout_weight="1"
                                        android:text="@string/olahraga_marquez_menangis_menang"
                                        android:textColor="#000000"
                                        android:textSize="16sp" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_main_category_marquez_menangis_menang"
                                            android:layout_width="wrap_content"
                                            android:layout_height="25dp"
                                            android:layout_weight="1"
                                            android:text="@string/olahraga"
                                            android:textColor="#FF0000"
                                            android:textSize="15sp"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/tv_main_time_marquez_menangis_menang"
                                            android:layout_width="wrap_content"
                                            android:layout_height="25dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="20dp"
                                            android:text="@string/time_olahraga_marquez_menangis_menang"
                                            android:textColor="#888888"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/beritaOlahraga_KDB"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_olahraga_kdb"
                                    android:layout_width="132dp"
                                    android:layout_height="85dp"
                                    tools:srcCompat="@drawable/kdb" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:paddingLeft="10dp">

                                    <TextView
                                        android:id="@+id/tv_olahraga_KDB"
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:layout_weight="1"
                                        android:text="@string/olahraga_KDB"
                                        android:textColor="#000000"
                                        android:textSize="16sp" />
                                    />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_main_category_KDB"
                                            android:layout_width="wrap_content"
                                            android:layout_height="25dp"
                                            android:layout_weight="1"
                                            android:text="@string/olahraga"
                                            android:textColor="#FF0000"
                                            android:textSize="15sp"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/tv_main_time_KDB"
                                            android:layout_width="wrap_content"
                                            android:layout_height="25dp"
                                            android:layout_weight="1"
                                            android:paddingLeft="20dp"
                                            android:text="@string/time_olahraga_KDB"
                                            android:textColor="#888888"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>