<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LL_article"
        android:layout_width="332dp"
        android:layout_height="655dp"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_millews"
            android:layout_width="285dp"
            android:layout_height="40dp"
            android:text="@string/millews"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_judul"
            android:layout_width="285dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="@string/judulArticle"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:text="@string/date" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="285dp"
            android:layout_height="192dp"
            tools:srcCompat="@drawable/rossi" />

        <TextView
            android:id="@+id/txt_keterangan"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:text="@string/keterangan"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_isi"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/isiArticleRossi"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>