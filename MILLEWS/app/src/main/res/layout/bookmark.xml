<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_bookmark"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="@string/bookmark"
            android:textColor="#FF0000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:id="@+id/bookmark_article_1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_bookmark_content_1"
                    android:layout_width="132dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/bookmark1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bookmark_content_1"
                        android:layout_width="164dp"
                        android:layout_height="58dp"
                        android:paddingTop="2dp"
                        android:text="@string/bookmark_content_2"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_bookmark_content_1"
                        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_time_4" />

                    <TextView
                        android:id="@+id/tv_bookmark_time_1"
                        android:layout_width="208dp"
                        android:layout_height="21dp"
                        android:text="@string/bookmark_time_2"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.52"
                        app:layout_constraintStart_toEndOf="@+id/iv_bookmark_content_1"
                        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_content_1"
                        app:layout_constraintVertical_bias="0.01" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bookmark_article_2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_bookmark_content_2"
                    android:layout_width="132dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_bookmark_content_1"
                    app:srcCompat="@drawable/bookmark2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bookmark_content_2"
                        android:layout_width="168dp"
                        android:layout_height="60dp"
                        android:paddingTop="2dp"
                        android:text="@string/bookmark_content_3"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_bookmark_content_2"
                        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_time_1" />

                    <TextView
                        android:id="@+id/tv_bookmark_time_2"
                        android:layout_width="208dp"
                        android:layout_height="21dp"
                        android:text="@string/bookmark_time_3"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.52"
                        app:layout_constraintStart_toEndOf="@+id/iv_bookmark_content_1"
                        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_content_2"
                        app:layout_constraintVertical_bias="0.014" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bookmark_article_3"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_bookmark_content_3"
                    android:layout_width="132dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_bookmark_content_2"
                    app:srcCompat="@drawable/bookmark3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bookmark_content_3"
                        android:layout_width="179dp"
                        android:layout_height="60dp"
                        android:paddingTop="2dp"
                        android:text="@string/bookmark_content_4"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_time_2" />

                    <TextView
                        android:id="@+id/tv_bookmark_time_3"
                        android:layout_width="208dp"
                        android:layout_height="21dp"
                        android:text="@string/bookmark_time_4"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.52"
                        app:layout_constraintStart_toEndOf="@+id/iv_bookmark_content_1"
                        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_content_3"
                        app:layout_constraintVertical_bias="0.017" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bookmark_article_4"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_bookmark_content_4"
                    android:layout_width="132dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/bookmark4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bookmark_content_4"
                        android:layout_width="177dp"
                        android:layout_height="60dp"
                        android:paddingTop="2dp"
                        android:text="@string/bookmark_content_1"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_bookmark_time_4"
                        android:layout_width="208dp"
                        android:layout_height="21dp"
                        android:text="@string/bookmark_time_1"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>