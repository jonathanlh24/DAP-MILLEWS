<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_editEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="95dp"
                android:text="@string/editProfile"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:clickable="true"
                app:srcCompat="@drawable/save_icon" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:foregroundGravity="center_vertical|center"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/tv_NameProfile"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/tv_taptochange"
            android:textAlignment="center"
            android:textColor="#00BCD4"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile" />

        <LinearLayout
            android:id="@+id/LL_editMyProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_nameMyProfile"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/profile_icon"
                android:drawableEnd="@drawable/edit_icon"
                android:ems="10"
                android:gravity="center|right"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Jonathan Leonardi"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_editEmail"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/email_icon"
                android:drawableEnd="@drawable/edit_icon"
                android:ems="10"
                android:gravity="center|right"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="jo******@gmail.com "
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/custom_input"
                android:drawableEnd="@drawable/edit_icon"
                android:ems="10"
                android:gravity="center|right"
                android:inputType="textPersonName"
                android:paddingStart="7dp"
                android:paddingRight="10dp"
                android:text="Male"
                android:textSize="16sp"
                tools:drawableStart="@drawable/gender_icon" />

            <EditText
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="125dp"
                android:background="@drawable/custom_input"
                android:drawableEnd="@drawable/to_edit_icon"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10sp"
                android:paddingEnd="10sp"
                android:text="Change Password"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>